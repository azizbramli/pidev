{% extends 'base.html.twig' %}

{% block title %}Publicite index{% endblock %}

{% block body %}
    <h1>Publicite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Produit</th>
                <th>Duree</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publicite in publicites %}
            <tr>
                <td>{{ publicite.id }}</td>
                <td>{{ publicite.image }}</td>
                <td>{{ publicite.produit }}</td>
                <td>{{ publicite.duree ? publicite.duree|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_publicite_show', {'id': publicite.id}) }}">show</a>
                    <a href="{{ path('app_publicite_edit', {'id': publicite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_publicite_new') }}">Create new</a>
{% endblock %}
